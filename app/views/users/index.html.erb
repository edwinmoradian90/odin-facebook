<h1>All users</h1>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to "#{user.first_name.capitalize} #{user.last_name.capitalize}", user_path(user.id) %>
      <% if current_user.is_friend?(user) %>
        <h3>Friend</h3>
      <% elsif current_user.pending?(user) %>
        <%= link_to 'Cancel', friend_request_path(user.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= form_for current_user.friend_requests.build(friend: user) do |f| %>
          <%= f.hidden_field :friend_id  %>
          <button class='btn btn-info'>Add Friend</button>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
<%= will_paginate @users %>
